<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="100dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_NameProduct"
        android:text="Tên sản phẩm"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:layout_toStartOf="@id/image_Product"
        android:maxLines="@integer/material_motion_duration_medium_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_IdProduct"
        android:text="Mã sản phẩm"
        android:layout_below="@+id/txt_NameProduct"
        android:textSize="12dp"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_Price"
        android:layout_below="@+id/txt_IdProduct"
        android:text="Giá sản phẩm"
        android:textSize="15dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/image_Product"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true" />
    
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/btn_DeleteProduct"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/image_Product"
        android:src="@drawable/ic_trash"
        android:backgroundTintMode="screen"/>

    <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
        android:id="@+id/number_of_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_Price"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        app:snp_buttonIconLeft="@drawable/ic_left"
        app:snp_buttonIconRight="@drawable/ic_right"
        app:snp_maxValue="100"
        app:snp_minValue="1"
        app:snp_orientation="horizontal"
        app:snp_stepSize="1"
        app:snp_value="1" />

       <!-- ScrollableNumberPicker.getValue()-->

</RelativeLayout>